{
  "info": {
    "name": "Post Feed API",
    "_postman_id": "d0f5a7a2-12c3-4e72-b63d-xxxxxx",
    "description": "Post Feed API collection (Django + DRF + JWT)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000/api" },
    { "key": "access_token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/users/",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"joy\",\n  \"email\": \"joy@example.com\",\n  \"password\": \"mypassword\"\n}"
            }
          }
        },
        {
          "name": "Login (Get Token)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/token/",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"joy\",\n  \"password\": \"mypassword\"\n}"
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/token/refresh/",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"<refresh_token_here>\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/users/"
          }
        },
        {
          "name": "Retrieve User by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/users/1/"
          }
        }
      ]
    },
    {
      "name": "Tags",
      "item": [
        {
          "name": "List Tags",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/tags/"
          }
        },
        {
          "name": "Create Tag",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{base_url}}/tags/",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"django\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "List Posts",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/posts/"
          }
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{base_url}}/posts/",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Post\",\n  \"content\": \"Hello World\",\n  \"tags\": [1]\n}"
            }
          }
        },
        {
          "name": "Retrieve Post",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/posts/1/"
          }
        },
        {
          "name": "Like Post",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/posts/1/like/"
          }
        },
        {
          "name": "Unlike Post",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/posts/1/unlike/"
          }
        }
      ]
    },
    {
      "name": "Feed",
      "item": [
        {
          "name": "Get Personalized Feed",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": {
              "raw": "{{base_url}}/feed?limit=10&offset=0",
              "host": ["{{base_url}}"],
              "path": ["feed"],
              "query": [
                { "key": "limit", "value": "10" },
                { "key": "offset", "value": "0" }
              ]
            }
          }
        }
      ]
    }
  ]
}
